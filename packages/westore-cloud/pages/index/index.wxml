   <view class="title" >用户信息</view>
   <view>姓名:{{user.item.name}}</view>
   <view>年龄:{{user.item.age}}</view>
   <view>城市:{{user.item.city}}</view>
   <view>性别:{{user.item.gender===1?'男':'女'}}</view>
